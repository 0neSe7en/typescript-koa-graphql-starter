{
  "name": "typescript-koa-graphql-starter",
  "version": "0.1.0",
  "main": "dist/src/app.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/app.js",
    "compile": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint --ext .ts ./ --fix",
    "ci": "npm run lint && NODE_ENV=dev npm run test",
    "purge": "rm -rf package-lock.json node_modules && npm run clean",
    "dev": "concurrently \"tsc -w\" \" cross-env NODE_ENV=dev PORT=3000 nodemon dist/src/app.js\"",
    "format": "prettier --config .prettierrc --write '**/*'",
    "test": "jest --verbose --forceExit --detectOpenHandles",
    "build": "npm run clean && npm run compile",
    "gq:gen": "graphql-codegen --config codegen.yml",
    "gq:gen:watch": "graphql-codegen --config codegen.yml --watch"
  },
  "dependencies": {
    "@sentry/integrations": "^5.12.5",
    "@sentry/node": "^5.12.5",
    "apollo-datasource": "^0.7.0",
    "apollo-server-koa": "^2.10.1",
    "apollo-server-plugin-base": "^0.9.0",
    "bluebird": "^3.7.2",
    "config": "2.0.2",
    "dataloader": "^2.0.0",
    "debug": "^4.1.1",
    "got": "^11.3.0",
    "graphql": "^14.6.0",
    "graphql-type-json": "^0.3.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "lodash": "4.17.15",
    "source-map-support": "0.5.16"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/introspection": "1.12.2",
    "@graphql-codegen/typescript": "1.12.2",
    "@graphql-codegen/typescript-resolvers": "1.12.2",
    "@types/bluebird": "^3.5.29",
    "@types/config": "0.0.36",
    "@types/debug": "^4.1.5",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jest": "^25.1.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/lodash": "4.14.149",
    "@types/node": "13.7.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "apollo": "^2.24.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "npm run format"
    ]
  }
}
